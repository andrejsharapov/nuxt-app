{
  "automerge": false,
  "baseBranches": [
    "master"
  ],
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "ignoreDeps": [
    // It is undesirable to update the dependencies indicated in the comments
    "@nuxt/content",
    "@nuxtjs/google-fonts",
    "@nuxtjs/html-validator",
    "nuxt-purgecss",
    "css-loader",
    "postcss", // "^7.0.38"
    "postcss-custom-media", // "^7.0.8"
    "postcss-hexrgba", // "^2.0.1"
    "postcss-html", // "^1.3.0"
    "postcss-mixins", // "^6.2.3"
    "postcss-nested", // "^4.2.3"
    "postcss-sorting", // "^5.0.1"
    "postcss-url", // "^9.0.0"
    "postcss-utilities", // "0.8.4"
    "prism-themes",
    "stylelint",
    "stylus", // "^0.54.8"
    "stylus-loader", // "^5.0.0"
    "vue-github-button" // "1.0.3"
  ],
  "ignorePaths": [
    "**/tests/**"
  ],
  "labels": [
    "Dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "major": {
    "stabilityDays": 14
  },
  "minor": {
    "stabilityDays": 7
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ]
}